        <View
            android:id="@+id/view8"
            android:layout_width="0dp"
            android:layout_height="244dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_wave6_3"
            app:layout_constraintBottom_toBottomOf="parent"
